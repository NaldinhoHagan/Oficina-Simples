<%- include("../layout", { body: `
  <h3>${client.id ? "Editar" : "Novo"} Cliente</h3>
  <form method='post' action='${action}'>
    <div class='mb-3'><label>Nome</label><input name='name' class='form-control' value='${client.name || ""}' required></div>
    <div class='mb-3'><label>Telefone</label><input name='phone' class='form-control' value='${client.phone || ""}'></div>
    <div class='mb-3'><label>Email</label><input type='email' name='email' class='form-control' value='${client.email || ""}'></div>
    <button class='btn btn-success'>Salvar</button>
    <a class='btn btn-secondary' href='/clients'>Voltar</a>
  </form>
` }) %>
