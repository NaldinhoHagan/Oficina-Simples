<%- include("../layout", { body: `
  <div class='d-flex justify-content-between align-items-center'>
    <h3 class='mb-0'><i class='bi bi-person-vcard me-2'></i>Cliente #${client.id}</h3>
    <div class='d-flex gap-2'>
      <a class='btn btn-outline-secondary' href='/clients'><i class='bi bi-arrow-left me-1'></i>Voltar</a>
      <a class='btn btn-outline-warning' href='/clients/${client.id}/edit'><i class='bi bi-pencil-square me-1'></i>Editar</a>
    </div>
  </div>

  <div class='card shadow-sm rounded-4 mt-3'>
    <div class='card-body'>
      <div class='row g-3'>
        <div class='col-md-6'>
          <div class='form-floating'>
            <input class='form-control' value='${client.name}' readonly>
            <label><i class='bi bi-person me-1'></i>Nome</label>
          </div>
        </div>
        <div class='col-md-3'>
          <div class='form-floating'>
            <input class='form-control' value='${client.phone || "-"}' readonly>
            <label><i class='bi bi-telephone me-1'></i>Telefone</label>
          </div>
        </div>
        <div class='col-md-3'>
          <div class='form-floating'>
            <input class='form-control' value='${client.email || "-"}' readonly>
            <label><i class='bi bi-envelope me-1'></i>Email</label>
          </div>
        </div>
      </div>
    </div>
  </div>
` }) %>